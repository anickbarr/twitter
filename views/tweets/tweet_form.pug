extends ../layout.pug 


block content 
    div(class="d-flex flex-row mx-auto content")
        div(class="profile-container") 
            include ../includes/profile
        div(class="flex-fill") 
            form(class="card" method="post" action = tweet._id ?"/tweets/update/"+ tweet._id : "/tweets")
                div(class="card-header") Ã‰crire un tweet 
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content")=tweet.content
                    if (errors)    
                        ul(class="my-2")
                            each error in errors 
                                li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="send" class="btn btn-primary ml-auto d-block")     